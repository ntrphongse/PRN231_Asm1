@model BusinessObject.Category

@{
    ViewData["Title"] = "Category Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
</div>
@if (ViewData["Categories"] != null)
{
    <div class="row ml-0 mr-0">
        <p class="text-danger">@ViewData["Categories"]</p>
    </div>
}
<div>
    @if (Model != null)
    {
        <a asp-action="Edit" asp-route-id="@Model.CategoryId">Edit</a> @Html.Raw("&verbar;")
    }
    <a asp-action="Index">Back to List</a>
</div>
