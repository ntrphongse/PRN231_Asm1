@model IEnumerable<BusinessObject.Order>

@{
    ViewData["Title"] = "Orders List";
}

<h1>Orders</h1>
@if (eStoreLibrary.eStoreClientUtils.IsAdmin(User))
{
    <p>
        <a class="btn btn-outline-success" asp-action="Create">Create New Order</a>
    </p>
    <p>
        <a class="btn btn-outline-info" asp-action="Report">Order Sales Report</a>
    </p>
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Member.Email)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                    @if (eStoreLibrary.eStoreClientUtils.IsAdmin(User))
                    {
                        <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
@if (TempData["Orders"] != null)
{
    <p class="text-danger">@TempData["Orders"] </p>
}